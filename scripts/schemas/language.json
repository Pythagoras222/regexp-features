{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "Language",
    "type": "object",
    "properties": {
        "language": { "type": "string" },
        "name": { "type": "string" },
        "priority": { "type": "number" },
        "reference": { "type": "string" },
        "description": { "type": "string" },
        "see_also": {
            "oneOf": [
                { "type": "string" },
                { "type": "array", "items": { "$ref": "Link" } }
            ]
        },
        "links": { "type": "array", "items": { "$ref": "HrefLinkDefinition" } },
        "content": { "type": "string" }
    },
    "required": ["language"]
}